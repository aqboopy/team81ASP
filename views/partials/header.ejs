<header class="bg-yellow-200 p-4">
	<div class="container mx-auto flex justify-between items-center">
		<!-- Logo -->
		<div class="">
			<a href="/"><img src="/partials/logo.png" alt="Team81 Logo" class="rounded-lg" style="height: 45px; width: 45px;"></a>
		</div>

		<!-- Navigation -->
		<nav>
			<ul class="flex space-x-6">
				
				<li>
					<a href="/likes" class="text-gray-700 hover:text-gray-900">
						<i class="fas fa-heart"></i>
					</a>
				</li>
				<li>
					<a href="/cart" class="text-gray-700 hover:text-gray-900">
						<i class="fas fa-shopping-cart"></i>
					</a>
				</li>
				<% if (userdata) { %>
				<li>
					<a
						href="/profile"
						class="text-gray-700 hover:text-gray-900"
					>
						<%=userdata.username %>
					</a>
				</li>

				<% } else { %>
				<li>
					<a href="/login" class="text-gray-700 hover:text-gray-900"
						>Sign In or Register</a
					>
				</li>
				<% } %>
			</ul>
		</nav>
	</div>
</header>
