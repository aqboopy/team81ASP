<!-- views/likes.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Likes page</title>
</head>
<body>
    <h1><%= title %></h1>
    <div>
        <% if (likes.length > 0) { %>
            <ul>
                <% likes.forEach(like => { %>
                    <li>
                        <img src="data:<%= like.image_type %>;base64,<%= like.image %>" alt="<%= like.name %>" style="width:100px;height:100px;">
                        <h2><%= like.name %></h2>
                        <p>$<%= like.price %></p>
                        <p><%= like.description %></p>
                        <form action="/likes/unlike" method="POST">
                            <input type="hidden" name="likeId" value="<%= like.id %>">
                            <button type="submit">Unlike</button>
                        </form>
                    </li>
                <% }) %>
            </ul>
        <% } else { %>
            <p>No likes yet.</p>
        <% } %>
    </div>
</body>
</html>
