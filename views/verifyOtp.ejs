<div class="flex items-center justify-center mt-10">
	<div class="bg-white p-8 rounded shadow-md w-full max-w-md relative">
		<h1 class="text-2xl font-bold mb-6 text-center">Verify OTP</h1>

		<div
			class="absolute inset-x-0 top-[120px] px-10 transform -translate-y-full"
		>
			<% if (typeof alert != 'undefined') { %> <%
			alert.forEach(function(error) { %>
			<div
				class="bg-red-100 text-red-700 p-2 rounded mb-2 text-center"
				role="alert"
			>
				<%= error.msg %>
			</div>
			<% }) %> <% } %>
		</div>

		<form
			action="/retrievePassword/verify-otp"
			method="POST"
			class="space-y-4 pt-10"
		>
			<div>
				<label for="otp" class="block text-gray-700">Enter OTP:</label>
				<input
					type="text"
					name="otp"
					id="otp"
					class="border rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 w-full"
				/>
			</div>

			<input
				type="submit"
				value="Verify OTP"
				class="bg-blue-500 text-white font-bold py-2 px-4 rounded hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-400 w-full"
			/>
		</form>
	</div>
</div>
