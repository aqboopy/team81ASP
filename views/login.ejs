<!DOCTYPE html>
<html>
    <head>
        <title>Login</title>
        <h1>Login</h1>
    </head>
    <body>
        <a href="/register" class="text-blue-500 hover:text-blue-700 underline">Register an account here</a>
        <br>
        <% if(typeof alert != 'undefined') { %>
            <% alert.forEach(function(error) { %>
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <%= error.msg %>
            </div>
            <% }) %>
        <% } %>
        <% if(typeof failAlert != 'undefined'){%>
            <p><%= failAlert.message%></p>
        <%}%>
        <form action="/login" method="POST">
            Email: <input type="email" name="email" class="border rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
            <br><br>
            Password: <input type="password" name="password" class="border rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
            <br><br>
            <input type="submit" value="Login" class="bg-blue-500 text-white font-bold py-2 px-4 rounded hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-400">
        </form>
    </body>
</html>
