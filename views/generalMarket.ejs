<!-- This should be our General Market Page -->
<div class="flex justify-center my-8">
	<input
		type="text"
		placeholder="Search"
		class="border border-gray-300 p-2 rounded-l-md"
	/>
	<button class="bg-blue-500 text-white p-2 rounded-r-md">Go!</button>
</div>
<h1 class="text-2xl font-bold mb-6 text-center">Our Products</h1>
<a
	href="/profile"
	class="text-blue-500 hover:text-blue-700 underline text-center block mb-4"
>
	View Own Profile
</a>
<!-- First row -->
<h2 class="text-2xl font-bold">Essentials</h2>
<div class="flex justify-around my-8">
    <% if(essentialdata){
        essentialdata.forEach(function(product){ %>

            <div class="w-1/3 bg-gray-200 p-4 text-center">
		        <!-- <div class="h-32 bg-gray-400 mb-4"></div> -->
		        <img src="data:<%= product.image_type %>;base64,<%= product.image %>" style="width: 300px;height: 300px;">
	        </div>
                
    <%   })  
    }%>
</div>

<div class="text-center my-8">
	<a href="/market/Essentials">
		<button class="bg-green-500 text-white py-2 px-4 rounded-full">
			View Listings >>
		</button>
	</a>
</div>

<!-- Second row -->
<h2 class="text-2xl font-bold">Household Items</h2>
<div class="flex justify-around my-8">
    <% if(householddata){
        householddata.forEach(function(product){ %>
            <div class="w-1/3 bg-gray-200 p-4 text-center">
		        <!-- <div class="h-32 bg-gray-400 mb-4"></div> -->
		        <img src="data:<%= product.image_type %>;base64,<%= product.image %>" style="width: 300px;height: 300px;">
	        </div>
    <%  })  
    }%>
</div>

<div class="text-center my-8">
	<a href="/market/Household Items">
		<button class="bg-green-500 text-white py-2 px-4 rounded-full">
			View Listings >>
		</button>
	</a>
</div>

<!-- Third Row -->
<h2 class="text-2xl font-bold">Electronics</h2>
<div class="flex justify-around my-8">
    <% if(electronicdata){
        electronicdata.forEach(function(product){ %>
            <div class="w-1/3 bg-gray-200 p-4 text-center">
		        <!-- <div class="h-32 bg-gray-400 mb-4"></div> -->
		        <img src="data:<%= product.image_type %>;base64,<%= product.image %>" style="width: 300px;height: 300px;">
	        </div>
    <%  })  
    }%>
</div>

<div class="text-center my-8">
	<a href="/market/Electronics">
		<button class="bg-green-500 text-white py-2 px-4 rounded-full">
			View Listings >>
