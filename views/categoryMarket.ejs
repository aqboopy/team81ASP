<!-- Product Market Page (Specified Category)-->
<div class="max-w-7xl mx-auto p-4">
	<!-- Category Title -->
	<h1 class="text-4xl font-bold text-gray-800 mb-10 text-center">
		<%= category %>
	</h1>

	<!-- Product Grid -->
	<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
		<% if(productsdata){ productsdata.forEach(function(product){ %>
		<div class="bg-white shadow-md rounded-lg overflow-hidden">
			<img
				src="data:<%= product.image_type %>;base64,<%= product.image %>"
				class="w-full h-64 object-cover"
			/>
			<div class="p-4">
				<h3 class="text-lg font-semibold text-gray-700">
					<%= product.name %>
				</h3>
				<a
					href="/market/listing/<%= product.id%>"
					class="text-blue-500 hover:text-blue-700 underline mt-4 block"
				>
					View more
				</a>
			</div>
		</div>
		<% }) } %>
	</div>
</div>
