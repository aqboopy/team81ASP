<section class="mb-16">
    <h2 class="text-2xl font-bold text-gray-800 mb-6">Search Results</h2>
    <% if (failAlert != null) { %>
		<p class="text-red-500 text-center"><%= failAlert.message %></p>
		<% } %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <% if(searchresult){ searchresult.forEach(function(product){ %>
        <div class="bg-white shadow-md rounded-lg overflow-hidden">
            <img
                src="data:<%= product.image_type %>;base64,<%= product.image %>"
                class="w-full h-64 object-cover"
            />
            <div class="p-4">
                <h3 class="text-lg font-semibold text-gray-700">
                    <%= product.name %>
                </h3>
                <p class="text-gray-600 mt-2"><%= product.description %></p>
            </div>
        </div>
        <% }) }%>
    </div>
</section>