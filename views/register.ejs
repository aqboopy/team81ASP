<!-- Register Page -->
<div class="flex items-center justify-center mt-10">
  <div class="bg-white p-8 rounded shadow-md w-full max-w-md">
    <h1 class="text-2xl font-bold mb-6 text-center">Register</h1>

    <a
      href="/login"
      class="text-blue-500 hover:text-blue-700 underline text-center block mb-4"
    >
      Back to Login
    </a>

    <!-- Display validation errors -->
    <% if (typeof alert != 'undefined') { %> <% alert.forEach(function(error) {
    %>
    <div class="error-message"><%= error.msg %></div>
    <% }) %> <% } %>

    <form action="/register" method="POST" class="space-y-4">
      <div>
        <label for="username" class="block text-gray-700">Name:</label>
        <!-- Modified by Penda -->
        <input
          type="text"
          name="username"
          id="username"
          class="border rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 w-full"
          value="<%= typeof username !== 'undefined' ? username : '' %>"
        />
        <!-- End -->
      </div>

      <div>
        <label for="email" class="block text-gray-700">Email:</label>
        <!-- Modified by Penda -->
        <input
          type="email"
          name="email"
          id="email"
          class="border rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 w-full"
          value="<%= typeof email !== 'undefined' ? email : '' %>"
        />
        <!-- End -->
      </div>

      <div>
        <!-- Modified by Penda -->
        <label for="password" class="block text-gray-700">Password:</label>
        <!-- End -->
        <input
          type="password"
          name="password"
          id="password"
          class="border rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 w-full"
        />
      </div>

      <input
        type="submit"
        value="Create Account"
        class="bg-blue-500 text-white font-bold py-2 px-4 rounded hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-400 w-full"
      />
    </form>
  </div>
</div>
