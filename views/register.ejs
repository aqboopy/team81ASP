<!DOCTYPE html>
<html>
    <head>
        <title>Register</title>
        <h1>Register</h1>
    </head>
    <body>
        <a href="/login" class="text-blue-500 hover:text-blue-700 underline">Back to Login</a>
        <br>
        <% if(typeof alert != 'undefined') { %>
            <% alert.forEach(function(error) { %>
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <%= error.msg %>
            </div>
            <% }) %>
        <% } %>
        <form action="/register" method="POST">
            Name: <input type="text" name="username" class="border rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
            <br><br>
            Email: <input type="email" name="email" class="border rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
            <br><br>
            Password: <input type="password" name="password" class="border rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
            <br><br>
            <input type="submit" value="Create Account" class="bg-blue-500 text-white font-bold py-2 px-4 rounded hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-400">
        </form>
    </body>
</html>
