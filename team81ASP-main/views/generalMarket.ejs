<!-- General Market Page -->
<div class="max-w-7xl mx-auto p-4">
	<!-- Search Bar -->
	<div class="flex justify-center my-8">
		<input
			type="text"
			placeholder="Search"
			class="border border-gray-300 p-3 rounded-l-lg w-2/3 focus:outline-none focus:ring-2 focus:ring-blue-500"
		/>
		<button
			class="bg-blue-500 text-white p-3 rounded-r-lg hover:bg-blue-600 transition-colors"
		>
			Go!
		</button>
	</div>

	<!-- Page Title -->
	<h1 class="text-3xl font-bold mb-10 text-center text-gray-800">
		Our Products
	</h1>

	<!-- Essentials Section -->
	<section class="mb-16">
		<h2 class="text-2xl font-bold text-gray-800 mb-6">Essentials</h2>
		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
			<% if(essentialdata){ essentialdata.forEach(function(product){ %>
			<div class="bg-white shadow-md rounded-lg overflow-hidden">
				<img
					src="data:<%= product.image_type %>;base64,<%= product.image %>"
					class="w-full h-64 object-cover"
				/>
				<div class="p-4">
					<h3 class="text-lg font-semibold text-gray-700">
						<%= product.name %>
					</h3>
					<p class="text-gray-600 mt-2"><%= product.description %></p>
				</div>
			</div>
			<% }) }%>
		</div>

		<div class="text-center mt-8">
			<a href="/market/Essentials">
				<button
					class="bg-green-500 text-white py-2 px-6 rounded-lg hover:bg-green-600 transition-colors"
				>
					View Listings >>
				</button>
			</a>
		</div>
	</section>

	<!-- Household Items Section -->
	<section class="mb-16">
		<h2 class="text-2xl font-bold text-gray-800 mb-6">Household Items</h2>
		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
			<% if(householddata){ householddata.forEach(function(product){ %>
			<div class="bg-white shadow-md rounded-lg overflow-hidden">
				<img
					src="data:<%= product.image_type %>;base64,<%= product.image %>"
					class="w-full h-64 object-cover"
				/>
				<div class="p-4">
					<h3 class="text-lg font-semibold text-gray-700">
						<%= product.name %>
					</h3>
					<p class="text-gray-600 mt-2"><%= product.description %></p>
				</div>
			</div>
			<% }) }%>
		</div>

		<div class="text-center mt-8">
			<a href="/market/Household Items">
				<button
					class="bg-green-500 text-white py-2 px-6 rounded-lg hover:bg-green-600 transition-colors"
				>
					View Listings >>
				</button>
			</a>
		</div>
	</section>

	<!-- Electronics Section -->
	<section class="mb-16">
		<h2 class="text-2xl font-bold text-gray-800 mb-6">Electronics</h2>
		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
			<% if(electronicdata){ electronicdata.forEach(function(product){ %>
			<div class="bg-white shadow-md rounded-lg overflow-hidden">
				<img
					src="data:<%= product.image_type %>;base64,<%= product.image %>"
					class="w-full h-64 object-cover"
				/>
				<div class="p-4">
					<h3 class="text-lg font-semibold text-gray-700">
						<%= product.name %>
					</h3>
					<p class="text-gray-600 mt-2"><%= product.description %></p>
				</div>
			</div>
			<% }) }%>
		</div>

		<div class="text-center mt-8">
			<a href="/market/Electronics">
				<button
					class="bg-green-500 text-white py-2 px-6 rounded-lg hover:bg-green-600 transition-colors"
				>
					View Listings >>
				</button>
			</a>
		</div>
	</section>
</div>
